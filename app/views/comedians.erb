<h1>Comedians</h1>
<ul>
  <% @comedians.each do |comedian| %>
  <li>
    <p>
      <strong>Name:
      </strong><%= comedian.name %></p>
    <p>Age:
      <%= comedian.age %></p>
    <p>Specials Count:
      <%= comedian.specials.count %></p>
    <h3>Specials:</h3>
    <ul>
      <% comedian.specials.each do |special| %>
      <li>
        <p><%= special.name %>
        </li>
        <% end %>
      </ul>
      <br><br>
    </li>
    <% end %>
  </ul>
  <h3>Average Comedians Age:
    <%= @comedians.average_comedians_age %></h3>
